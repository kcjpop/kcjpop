  <h2>Find me on</h2>
  <ul>
    <li>👨‍💻 <a rel="me" href="https://github.com/kcjpop">Github</a></li>
    <li>
      🥷 <a rel="me" href="https://www.codewars.com/users/kcjpop">Codewars</a>
    </li>
    <li>
      🐘 <a rel="me" href="https://toot.cafe/@kcjpop">@kcjpop@toot.cafe</a>
    </li>
  </ul>

  <h2>Notes</h2>
  <ul>
    {
      notes.map((note) => (
        <li>
          <a href={note.url}>
            {note.file.substring(note.file.lastIndexOf('/'))}
          </a>
        </li>
      ))
    }
  </ul>
</Base>
