    .social li::marker {
      content: attr(data-emoji) ' ';
    }

    .note {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
      justify-content: space-between;
    }

    .notes {
      padding-inline-start: 1em;
    }
  </style>
