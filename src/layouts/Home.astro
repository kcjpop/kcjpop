---
import Base from './Base.astro'

const notes = await Astro.glob('../pages/notes/*.md')
const posts = await Astro.glob('../pages/posts/*.md')
---

<Base>
  <slot />

  <h2>Notes</h2>
  <ul>
    {
      notes.map((note) => (
        <li>
          <a href={note.url}>
            {note.file.substring(note.file.lastIndexOf('/'))}
          </a>
        </li>
      ))
    }
  </ul>

  <h2>Posts</h2>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Base>
